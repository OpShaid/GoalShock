# GoalShock Trading Bot Configuration
# Copy this to .env and fill in your API keys

# =============================================================================
# API KEYS
# =============================================================================

# API-Football (Required for goal detection)
# Get from: https://rapidapi.com/api-sports/api/api-football
API_FOOTBALL_KEY=your_api_football_key_here

# Polymarket (Required for trading)
# Get from: https://docs.polymarket.com
POLYMARKET_API_KEY=your_polymarket_key_here
POLYMARKET_PRIVATE_KEY=your_private_key_for_signing

# Kalshi (Optional - alternative exchange)
# Get from: https://kalshi.com/api
KALSHI_API_KEY=your_kalshi_email
KALSHI_API_SECRET=your_kalshi_password

# =============================================================================
# TRADING MODE
# =============================================================================

# Set to "simulation" for paper trading, "live" for real money
TRADING_MODE=simulation

# Enable/disable strategies
ENABLE_ALPHA_ONE=true
ENABLE_ALPHA_TWO=true
ENABLE_WEBSOCKET=true

# =============================================================================
# ALPHA ONE - UNDERDOG STRATEGY
# =============================================================================

# Maximum pre-match odds to consider as underdog (0.45 = 45%)
UNDERDOG_THRESHOLD=0.45

# Maximum trade size per position
MAX_TRADE_SIZE_USD=500

# Maximum number of concurrent positions
MAX_POSITIONS=5

# Take profit percentage
TAKE_PROFIT_PERCENT=15

# Stop loss percentage
STOP_LOSS_PERCENT=10

# Maximum daily loss before stopping
MAX_DAILY_LOSS_USD=2000

# =============================================================================
# ALPHA TWO - LATE COMPRESSION STRATEGY
# =============================================================================

# Minimum confidence to execute clipping trade (0.95 = 95%)
CLIP_MIN_CONFIDENCE=0.95

# Maximum trade size for clipping
CLIP_MAX_SIZE_USD=50

# Minimum profit threshold to execute (3%)
CLIP_MIN_PROFIT_PCT=3

# Maximum seconds before market close to consider
CLIP_MAX_SECONDS=300
